@model Webtracking.Database.Campaign 

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Create</h1>
<h4>Campaign</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="custom-control-label"></label>
                <input asp-for="Name" title="Please use only alphanumeric characters (a-z A-Z 0-9) without space. "/>
                <span asp-validation-for="Name" class="custom-valisation"></span>
            </div>
            <div class="form-group">
                <label asp-for="Domain" class="custom-control-label"></label>
                <input asp-for="Domain" title="Please fill only the domain or subdomain of this application"/>
                <span asp-validation-for="Domain" class="custom-valisation"></span>
            </div>
            <div class="form-group">
                <label asp-for="DynamicField" class="custom-control-label"></label>
                <input asp-for="DynamicField" title="Please insert here, the tag used by your sending email software to define the receipient email"/>
                <span asp-validation-for="DynamicField" class="custom-valisation"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailSent" class="custom-control-label"></label>
                <input asp-for="EmailSent" title="Please fill here the total number of emails sent for this campaggne (to calculate the statistics)"/>
                <span asp-validation-for="EmailSent" class="custom-valisation"></span>
            </div>
            <div class="row">
                <input type="submit" value="Create" class="btn btn-primary" />&nbsp;&nbsp;<a class="btn btn-danger" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div> 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
